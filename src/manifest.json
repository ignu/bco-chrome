{
  "manifest_version": 2,
  "name": "BCO Customizer",
  "short_name": "BCO",
  "author": "Len Smith",
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["https://boardcrewcial.org/*"],
      "css": ["content.css"]
    },
    {
      "matches": ["https://boardcrewcial.org/*"],
      "js": ["jquery.js", "content.bundle.js"]
    }
 ],
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "notifications",
    "activeTab",
    "tabs",
    "storage",
    "https://boardcrewcial.org/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
